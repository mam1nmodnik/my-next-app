datasource db {
  provider = "sqlite" // можно заменить на postgresql или mysql
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  login     String   @unique
  name      String?
  avatar    String?
  password  String
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  idUser    String   
  title     String   
  content   String   
  nameUser  String  
  date      String   
  createdAt DateTime @default(now())
}
