datasource db {
  provider = "sqlite" // можно заменить на postgresql или mysql
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  login     String   @unique
  name      String?
  avatar    String?
  password  String
  createdAt DateTime @default(now())
  posts     Post[]   
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  date      DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int      
}
